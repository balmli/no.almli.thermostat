{
  "id": "no.almli.thermostat",
  "version": "1.2.0",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "VThermo"
  },
  "description": {
    "en": "Virtual thermostat and humidity controller"
  },
  "category": [
    "tools"
  ],
  "tags": {
    "en": [
      "thermostat",
      "temperature control",
      "heating",
      "virtual",
      "humidity"
    ]
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "permissions": [
    "homey:manager:api"
  ],
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "bjornaralmli"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/balmli/no.almli.thermostat/issues"
  },
  "source": "https://github.com/balmli/no.almli.thermostat",
  "flow": {
    "triggers": [
      {
        "id": "vh_onoff_false",
        "title": {
          "en": "Humidity device turned off"
        },
        "tokens": [
          {
            "name": "state",
            "type": "number",
            "title": {
              "en": "State"
            },
            "example": 0
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vh_onoff_true",
        "title": {
          "en": "Humidity device turned on"
        },
        "tokens": [
          {
            "name": "state",
            "type": "number",
            "title": {
              "en": "State"
            },
            "example": 1
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vh_target_humidity_changed",
        "title": {
          "en": "Target humidity changed"
        },
        "tokens": [
          {
            "name": "humidity",
            "type": "number",
            "title": {
              "en": "Humidity"
            },
            "example": 35
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vt_onoff_false",
        "title": {
          "en": "Thermostat turned off"
        },
        "tokens": [
          {
            "name": "state",
            "type": "number",
            "title": {
              "en": "State"
            },
            "example": 0
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_onoff_true",
        "title": {
          "en": "Thermostat turned on"
        },
        "tokens": [
          {
            "name": "state",
            "type": "number",
            "title": {
              "en": "State"
            },
            "example": 1
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "vh_humidity_decreased_last_mins",
        "title": {
          "en": "Humidity has decreased..."
        },
        "titleFormatted": {
          "en": "Humidity !{{has|hasn't}} decreased more than [[change_pct_points]] last [[minutes]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          },
          {
            "name": "change_pct_points",
            "title": {
              "en": "Decrease in % points"
            },
            "type": "range",
            "min": 1,
            "max": 50,
            "step": 0.5,
            "label": " % points",
            "labelDecimals": 1
          },
          {
            "name": "minutes",
            "title": {
              "en": "Minutes"
            },
            "type": "range",
            "min": 1,
            "max": 60,
            "step": 1,
            "label": " minutes",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "vh_humidity_increased_last_mins",
        "title": {
          "en": "Humidity has increased..."
        },
        "titleFormatted": {
          "en": "Humidity !{{has|hasn't}} increased more than [[change_pct_points]] last [[minutes]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          },
          {
            "name": "change_pct_points",
            "title": {
              "en": "Increase in % points"
            },
            "type": "range",
            "min": 1,
            "max": 50,
            "step": 0.5,
            "label": " % points",
            "labelDecimals": 1
          },
          {
            "name": "minutes",
            "title": {
              "en": "Minutes"
            },
            "type": "range",
            "min": 1,
            "max": 60,
            "step": 1,
            "label": " minutes",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "vh_onoff_is_on",
        "title": {
          "en": "VHumidity is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vt_onoff_is_on",
        "title": {
          "en": "Thermostat is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "vh_set_target_humidity",
        "title": {
          "en": "Set the target humidity"
        },
        "hint": {
          "en": "Set the target humidity"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=VHumidity"
          },
          {
            "name": "vh_target_humidity",
            "title": {
              "en": "Target humidity"
            },
            "type": "range",
            "min": 1,
            "max": 90,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "VHumidity",
      "name": {
        "en": "VHumidity"
      },
      "icon": "/drivers/VHumidity/assets/icon.svg",
      "images": {
        "large": "/drivers/VHumidity/assets/images/large.png",
        "small": "/drivers/VHumidity/assets/images/small.png"
      },
      "class": "thermostat",
      "capabilities": [
        "onoff",
        "vt_onoff",
        "vh_target_humidity",
        "measure_humidity",
        "vh_target_humidity_view"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true
        },
        "vh_target_humidity": {
          "decimals": 0,
          "min": 1,
          "max": 90,
          "step": 1
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Humidity"
          },
          "children": [
            {
              "id": "calc_method_humidity",
              "type": "dropdown",
              "label": {
                "en": "Humidity calculation method"
              },
              "value": "AVERAGE",
              "values": [
                {
                  "id": "AVERAGE",
                  "label": {
                    "en": "Average"
                  }
                },
                {
                  "id": "MIN",
                  "label": {
                    "en": "Minimum"
                  }
                },
                {
                  "id": "MAX",
                  "label": {
                    "en": "Maximum"
                  }
                }
              ],
              "hint": {
                "en": "Method for calculating the humidity if there are several humidity sensors."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "hysteresis",
              "value": 1,
              "type": "number",
              "label": {
                "en": "Hysteresis"
              }
            },
            {
              "id": "invert",
              "label": {
                "en": "Invert for humidifier"
              },
              "type": "checkbox",
              "value": false
            },
            {
              "id": "onoff_enabled",
              "type": "checkbox",
              "label": {
                "en": "On / off enabled"
              },
              "value": true,
              "hint": {
                "en": "By unchecking this switch, the device cannot be turned off."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Timing"
          },
          "children": [
            {
              "id": "device_delay",
              "type": "number",
              "min": 0,
              "max": 5000,
              "units": {
                "en": "ms"
              },
              "label": {
                "en": "Delay in milliseconds between switching devices"
              },
              "value": 0,
              "hint": {
                "en": "You can add a delay after each device has been switched on / off."
              }
            }
          ]
        }
      ]
    },
    {
      "id": "VThermo",
      "name": {
        "en": "VThermo"
      },
      "icon": "/drivers/VThermo/assets/icon.svg",
      "images": {
        "large": "/drivers/VThermo/assets/images/large.png",
        "small": "/drivers/VThermo/assets/images/small.png"
      },
      "class": "thermostat",
      "capabilities": [
        "onoff",
        "vt_onoff",
        "target_temperature",
        "measure_temperature"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true,
          "titleTrue": {
            "en": "Active"
          },
          "titleFalse": {
            "en": "Idle"
          }
        },
        "target_temperature": {
          "decimals": 1,
          "min": 1,
          "max": 40,
          "step": 0.5
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Temperature"
          },
          "children": [
            {
              "id": "calc_method",
              "type": "dropdown",
              "label": {
                "en": "Temperature calculation method"
              },
              "value": "AVERAGE",
              "values": [
                {
                  "id": "AVERAGE",
                  "label": {
                    "en": "Average"
                  }
                },
                {
                  "id": "MIN",
                  "label": {
                    "en": "Minimum"
                  }
                },
                {
                  "id": "MAX",
                  "label": {
                    "en": "Maximum"
                  }
                }
              ],
              "hint": {
                "en": "Method for calculating the temperature if there are several temperature sensors."
              }
            },
            {
              "type": "group",
              "label": {
                "en": "Temperature sensors in the same zone"
              },
              "children": [
                {
                  "id": "zone_sensors",
                  "type": "checkbox",
                  "label": {
                    "en": "Temperature sensors"
                  },
                  "value": true,
                  "hint": {
                    "en": "Standard temperature sensors in the same zone."
                  }
                },
                {
                  "id": "thermostat",
                  "type": "checkbox",
                  "label": {
                    "en": "Other thermostats"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other thermostats with temperature sensors in the same zone."
                  }
                },
                {
                  "id": "zone_other",
                  "type": "checkbox",
                  "label": {
                    "en": "Other devices"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other devices with temperature sensors in the same zone."
                  }
                }
              ]
            },
            {
              "type": "group",
              "label": {
                "en": "Temperature sensors from the parent zone"
              },
              "children": [
                {
                  "id": "parent_sensors",
                  "type": "checkbox",
                  "label": {
                    "en": "Temperature sensors"
                  },
                  "value": false,
                  "hint": {
                    "en": "Standard temperature sensors in the parent zone."
                  }
                },
                {
                  "id": "parent_thermostat",
                  "type": "checkbox",
                  "label": {
                    "en": "Other thermostats"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other thermostats with temperature sensors in the parent zone."
                  }
                },
                {
                  "id": "parent_vthermo",
                  "type": "checkbox",
                  "label": {
                    "en": "Other VThermos"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other VThermos in the parent zone."
                  }
                },
                {
                  "id": "parent_other",
                  "type": "checkbox",
                  "label": {
                    "en": "Other devices"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other devices with temperature sensors in the parent zone."
                  }
                }
              ]
            },
            {
              "type": "group",
              "label": {
                "en": "Temperature sensors from sub zones (one level)"
              },
              "children": [
                {
                  "id": "sub_sensors",
                  "type": "checkbox",
                  "label": {
                    "en": "Temperature sensors"
                  },
                  "value": false,
                  "hint": {
                    "en": "Standard temperature sensors in sub zones (one level down)."
                  }
                },
                {
                  "id": "sub_thermostat",
                  "type": "checkbox",
                  "label": {
                    "en": "Other thermostats"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other thermostats with temperature sensors in sub zones (one level down)."
                  }
                },
                {
                  "id": "sub_vthermo",
                  "type": "checkbox",
                  "label": {
                    "en": "Other VThermos"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other VThermos in sub zones (one level down)."
                  }
                },
                {
                  "id": "sub_other",
                  "type": "checkbox",
                  "label": {
                    "en": "Other devices"
                  },
                  "value": false,
                  "hint": {
                    "en": "Other devices with temperature sensors in sub zones (one level down)."
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Target temperature"
          },
          "children": [
            {
              "id": "target_diff_temp",
              "type": "number",
              "label": {
                "en": "Target temperature offset (°C)"
              },
              "hint": {
                "en": "Offset when target temperature is updated from a master VThermo - thermostat"
              },
              "value": 0,
              "min": -30,
              "max": 30,
              "step": 0.5,
              "units": {
                "en": "°C"
              }
            },
            {
              "id": "target_min_temp",
              "type": "number",
              "label": {
                "en": "Minimum target temperature (°C)"
              },
              "hint": {
                "en": "Minimum target temperature when target temperature is updated from a master VThermo - thermostat"
              },
              "value": 1,
              "min": 1,
              "max": 40,
              "step": 0.5,
              "units": {
                "en": "°C"
              }
            },
            {
              "id": "target_max_temp",
              "type": "number",
              "label": {
                "en": "Maximum target temperature (°C)"
              },
              "hint": {
                "en": "Maximum target temperature when target temperature is updated from a master VThermo - thermostat"
              },
              "value": 40,
              "min": 1,
              "max": 40,
              "step": 0.5,
              "units": {
                "en": "°C"
              }
            },
            {
              "type": "group",
              "label": {
                "en": "Target temperature in the same zone"
              },
              "children": [
                {
                  "id": "target_zone_from_other",
                  "type": "checkbox",
                  "label": {
                    "en": "From other thermostat"
                  },
                  "value": false,
                  "hint": {
                    "en": "Update target temperature on this VThermo from another thermostat in the same zone."
                  }
                },
                {
                  "id": "target_zone_to_other",
                  "type": "checkbox",
                  "label": {
                    "en": "Update other thermostats"
                  },
                  "value": false,
                  "hint": {
                    "en": "Update target temperature of other thermostats (not VThermos) in the same zone."
                  }
                }
              ]
            },
            {
              "type": "group",
              "label": {
                "en": "Target temperature to sub zones (one level)"
              },
              "children": [
                {
                  "id": "target_sub_zones_to_vthermo",
                  "type": "checkbox",
                  "label": {
                    "en": "Update other VThermos"
                  },
                  "value": false,
                  "hint": {
                    "en": "Update target temperature of other VThermos in sub zones (one level down)."
                  }
                },
                {
                  "id": "target_sub_zones_to_other",
                  "type": "checkbox",
                  "label": {
                    "en": "Update other thermostats"
                  },
                  "value": false,
                  "hint": {
                    "en": "Update target temperature of other thermostats (not VThermos) in sub zones (one level down)."
                  }
                }
              ]
            },
            {
              "type": "group",
              "label": {
                "en": "Target temperature to sub zones (all levels)"
              },
              "children": [
                {
                  "id": "target_all_sub_zones_to_vthermo",
                  "type": "checkbox",
                  "label": {
                    "en": "Update other VThermos"
                  },
                  "value": false,
                  "hint": {
                    "en": "Update target temperature of other VThermos in all sub zones (all levels down)."
                  }
                },
                {
                  "id": "target_all_sub_zones_to_other",
                  "type": "checkbox",
                  "label": {
                    "en": "Update other thermostats"
                  },
                  "value": false,
                  "hint": {
                    "en": "Update target temperature of other thermostats (not VThermos) in all sub zones (all levels down)."
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Contact alarm"
          },
          "children": [
            {
              "id": "contact_alarm",
              "type": "checkbox",
              "label": {
                "en": "Turn off if contact alarm"
              },
              "value": false
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "hysteresis",
              "type": "number",
              "label": {
                "en": "Hysteresis"
              },
              "value": 0.5
            },
            {
              "id": "invert",
              "type": "checkbox",
              "label": {
                "en": "Invert switch"
              },
              "value": false
            },
            {
              "id": "onoff_enabled",
              "type": "checkbox",
              "label": {
                "en": "On / off enabled"
              },
              "value": true,
              "hint": {
                "en": "By unchecking this switch, the device cannot be turned off."
              }
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Timing"
          },
          "children": [
            {
              "id": "device_delay",
              "type": "number",
              "min": 0,
              "max": 5000,
              "units": {
                "en": "ms"
              },
              "label": {
                "en": "Delay in milliseconds between switching devices"
              },
              "value": 0,
              "hint": {
                "en": "You can add a delay after each device has been switched on / off."
              }
            }
          ]
        }
      ]
    }
  ],
  "capabilities": {
    "vh_target_humidity": {
      "type": "number",
      "min": 1,
      "max": 90,
      "title": {
        "en": "Target humidity"
      },
      "desc": {
        "en": "Target humidity in percent (%)"
      },
      "units": {
        "en": "%"
      },
      "chartType": "stepLine",
      "decimals": 0,
      "insights": true,
      "getable": true,
      "setable": true,
      "uiComponent": "slider"
    },
    "vh_target_humidity_view": {
      "type": "number",
      "title": {
        "en": "Target humidity"
      },
      "desc": {
        "en": "Target humidity in percent (%)"
      },
      "units": {
        "en": "%"
      },
      "insights": false,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/target.svg"
    },
    "vt_onoff": {
      "type": "boolean",
      "icon": "/drivers/VThermo/assets/images/onoff.svg",
      "noblink": false,
      "greyout": true,
      "label": {
        "true": {
          "en": "Active"
        },
        "false": {
          "en": "Idle"
        }
      },
      "title": {
        "en": "State"
      },
      "desc": {
        "en": "State of the device"
      },
      "getable": true,
      "setable": false
    }
  }
}