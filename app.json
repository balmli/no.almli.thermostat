{
  "id": "no.almli.thermostat",
  "version": "1.1.13",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "VThermo"
  },
  "description": {
    "en": "Virtual thermostat and humidity controller"
  },
  "category": [
    "tools"
  ],
  "tags": {
    "en": [
      "thermostat",
      "temperature control",
      "heating",
      "virtual",
      "humidity"
    ]
  },
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "bjornaralmli"
      }
    }
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "vt_onoff_true",
        "title": {
          "en": "Thermostat turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_onoff_false",
        "title": {
          "en": "Thermostat turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vh_humidity_changed",
        "title": {
          "en": "Humidity changed"
        },
        "tokens": [
          {
            "name": "humidity",
            "type": "number",
            "title": {
              "en": "Humidity"
            },
            "example": 35
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vh_target_humidity_changed",
        "title": {
          "en": "Target humidity changed"
        },
        "tokens": [
          {
            "name": "humidity",
            "type": "number",
            "title": {
              "en": "Humidity"
            },
            "example": 35
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vh_onoff_true",
        "title": {
          "en": "Humidity device turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vh_onoff_false",
        "title": {
          "en": "Humidity device turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "vt_onoff_is_on",
        "title": {
          "en": "Thermostat is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vh_onoff_is_on",
        "title": {
          "en": "VHumidity is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          }
        ]
      },
      {
        "id": "vh_humidity_increased_last_mins",
        "title": {
          "en": "Humidity has increased..."
        },
        "titleFormatted": {
          "en": "Humidity !{{has|hasn't}} increased more than [[change_pct_points]] last [[minutes]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          },
          {
            "name": "change_pct_points",
            "title": {
              "en": "Increase in % points"
            },
            "type": "range",
            "min": 1.0,
            "max": 50.0,
            "step": 0.5,
            "label": " % points",
            "labelDecimals": 1
          },
          {
            "name": "minutes",
            "title": {
              "en": "Minutes"
            },
            "type": "range",
            "min": 1,
            "max": 60,
            "step": 1,
            "label": " minutes",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "vh_humidity_decreased_last_mins",
        "title": {
          "en": "Humidity has decreased..."
        },
        "titleFormatted": {
          "en": "Humidity !{{has|hasn't}} decreased more than [[change_pct_points]] last [[minutes]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VHumidity"
          },
          {
            "name": "change_pct_points",
            "title": {
              "en": "Decrease in % points"
            },
            "type": "range",
            "min": 1.0,
            "max": 50.0,
            "step": 0.5,
            "label": " % points",
            "labelDecimals": 1
          },
          {
            "name": "minutes",
            "title": {
              "en": "Minutes"
            },
            "type": "range",
            "min": 1,
            "max": 60,
            "step": 1,
            "label": " minutes",
            "labelDecimals": 0
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "vh_set_target_humidity",
        "title": {
          "en": "Set the target humidity"
        },
        "hint": {
          "en": "Set the target humidity"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=VHumidity"
          },
          {
            "name": "vh_target_humidity",
            "title": {
              "en": "Target humidity"
            },
            "type": "range",
            "min": 1,
            "max": 90,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "VThermo",
      "name": {
        "en": "VThermo"
      },
      "class": "thermostat",
      "capabilities": [
        "onoff",
        "vt_onoff",
        "target_temperature",
        "measure_temperature"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true,
          "titleTrue": {
            "en": "Active"
          },
          "titleFalse": {
            "en": "Idle"
          }
        },
        "target_temperature": {
          "decimals": 1,
          "min": 1,
          "max": 40,
          "step": 0.5
        }
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "hysteresis",
              "type": "number",
              "label": {
                "en": "Hysteresis"
              },
              "value": 0.5
            },
            {
              "id": "contact_alarm",
              "type": "checkbox",
              "label": {
                "en": "Turn off if contact alarm"
              },
              "value": false
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/VThermo/assets/images/large.png",
        "small": "/drivers/VThermo/assets/images/small.png"
      }
    },
    {
      "id": "VHumidity",
      "name": {
        "en": "VHumidity"
      },
      "class": "thermostat",
      "capabilities": [
        "vt_onoff",
        "vh_target_humidity",
        "measure_humidity"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true
        },
        "vh_target_humidity": {
          "decimals": 0,
          "min": 1,
          "max": 90,
          "step": 1
        }
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "hysteresis",
              "type": "number",
              "label": {
                "en": "Hysteresis"
              },
              "value": 1
            },
            {
              "id": "invert",
              "type": "checkbox",
              "label": {
                "en": "Invert for humidifier"
              },
              "value": false
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/VHumidity/assets/images/large.png",
        "small": "/drivers/VHumidity/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "vt_onoff": {
      "type": "boolean",
      "icon": "/drivers/VThermo/assets/images/onoff.svg",
      "noblink": false,
      "greyout": true,
      "label": {
        "true": {
          "en": "Active"
        },
        "false": {
          "en": "Idle"
        }
      },
      "title": {
        "en": "State"
      },
      "desc": {
        "en": "State of the device"
      },
      "getable": true,
      "setable": false
    },
    "vh_target_humidity": {
      "type": "number",
      "min": 1,
      "max": 90,
      "title": {
        "en": "Target humidity"
      },
      "desc": {
        "en": "Target humidity in percent (%)"
      },
      "units": {
        "en": "%"
      },
      "chartType": "stepLine",
      "decimals": 0,
      "insights": true,
      "getable": true,
      "setable": true,
      "uiComponent": "slider"
    }
  }
}